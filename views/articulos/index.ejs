<%-include('../layout/cabecera.ejs')%>
    <div class="container">

        <div class="card mt-4">
            <div class="card-header" style="background-color: transparent;">
                <div class="row">
                    <div class="col-10 col-md-offset-2">
                        <h3>Lista de Articulos</h3>
                    </div>
                    <div class="col-2">
                        <a href="/articulos/crear" class="btn btn-info">Nuevo</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-borderless table-sm table-bordered mt-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>NOMBRE</th>
                            <th>NOMBRE IMAGEN</th>
                            <th>IMAGEN</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let articulo = 0; articulo < articulos.length; articulo++ ) { %>
                            <tr>
                                <td>
                                    <%=articulos[articulo].id_articulo %>
                                </td>
                                <td>
                                    <%=articulos[articulo].articulo %>
                                </td>
                                <td>
                                    <%=articulos[articulo].imagen %>
                                </td>
                                <td>
                                    <div class="text-center">
                                        <img class="img-thumbnail rounded" src="/images/<%=articulos[articulo].imagen %> " alt="20" width="40">
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                        <form class="form-inline" method="post" action="/libros/eliminar/<%=articulos[articulo].id_articulo %>">
                                            <button class="btn btn-sm"><i class="fa-solid fa-pen" style="color:#294056"></i></button>
                                        </form>
                                    </div>
                                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                        <form class="form-inline" method="post" action="/libros/eliminar/<%=articulos[articulo].id_articulo %>">
                                            <button class="btn btn-sm"><i class="fa-solid fa-trash" style="color:#ee7e71"></i></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-muted">
                Node Js
            </div>
        </div>
    </div>
    <%-include('../layout/pie.ejs')%>