<%-include('../layout/cabecera.ejs')%>
    <div class="container">

        <div class="card mt-4">
            <div class="card-header" style="background-color: transparent;">
                <div class="row">
                    <div class="col-10 col-md-offset-2">
                        <h3>Lista de Articulos</h3>
                    </div>
                    <div class="col-2">
                        <a href="/articulos/crear" class="btn btn-info">Nuevo</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row mt-4">
                    <% for( let articulo = 0; articulo < articulos.length; articulo++ ) { %>
                        <div class="col p-3">
                            <div class="card" style="width: 18rem;">
                                <img class="card-img-top" src="/images/<%=articulos[articulo].imagen %> " width="100%">
                                <div class="card-body">
                                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong><h5>Precio:</h5></strong>
                                            <h5>$
                                                <%=articulos[articulo].precio %>
                                            </h5>
                                        </li>
                                        <li class="list-group-item">Caracteristicas:<br>
                                            <p class="text-muted" style="font-size: small;">
                                                <%=articulos[articulo].caracteristicas %>
                                            </p>
                                        </li>
                                    </ul>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                        <form class="form-inline" method="post" action="/libros/eliminar/<%=articulos[articulo].id_articulo %>">
                                            <button class="btn btn-sm"><i class="fa-solid fa-pen" style="color:#294056"></i></button>
                                        </form>
                                    </div>
                                    <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                                        <form class="form-inline" method="post" action="/libros/eliminar/<%=articulos[articulo].id_articulo %>">
                                            <button class="btn btn-sm"><i class="fa-solid fa-trash" style="color:#ee7e71"></i></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
            <div class="card-footer text-muted">
                Node Js
            </div>
        </div>

    </div>
    <%-include('../layout/pie.ejs')%>